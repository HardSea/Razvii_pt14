<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Razvii_pt14" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">15dp</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="tabBackground">@color/teal_200</item>
        <item name="tabTextAppearance">@color/black</item>
        <item name="tabSelectedTextColor">@color/teal_700</item>
    </style>
</resources>